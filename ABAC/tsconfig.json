{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"moduleDetection": "force",
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["./src/types","./node_modules/@types"]
	},
	"include": ["src"]
}
